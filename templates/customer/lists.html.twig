{% extends 'base.html.twig' %}

{% block body %}
    <div class="app-width-100 mt-5 table-responsive">
        <h1 class="m-2">Liste des clients</h1>
        <div class="border-2 app-grid-container">
            <form class="float-end mb-4" action="{{ path('customer_new') }}" method="get" style="display: inline;">
                <button type="submit" class="btn btn-info">Créer un client</button>
            </form>
        </div>
        <table class="table table-striped table-bordered overflow-x-auto">
            <thead>
            <tr>
                {% for property in ['Title','customer_id', 'firstname', 'lastname', 'email', 'city', 'postal_code', 'actions'] %}
                    <th>{{ property|capitalize }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr>
                    {% for property in ['title','customerId', 'firstname', 'lastname', 'email', 'city', 'postalCode'] %}
                        <td>{{ attribute(customer, property) }}</td>
                    {% endfor %}
                    <td>
                        <div class="btn-group">
                            <form action="{{ path('customer_show', { id: customer.customerId }) }}" method="get"
                                  style="display: inline;">
                                <button type="submit" class="btn btn-outline-primary m-1">Voir</button>
                            </form>
                            <form action="{{ path('customer_edit', { id: customer.customerId }) }}" method="get"
                                  style="display: inline;">
                                <button type="submit" class="btn btn-outline-secondary m-1">Modifier</button>
                            </form>
                            <form action="{{ path('customer_delete', { id: customer.customerId }) }}" method="post"
                                  style="display: inline;"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');">
                                <button type="submit" class="btn btn-outline-danger m-1">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun client trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
